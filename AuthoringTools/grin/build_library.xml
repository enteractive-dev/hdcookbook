<project name="Build GRIN libraries for jdk and javame" basedir="." default="library-all">
   
    <import file="preset_defs.xml"/>
    <property name="HDC_BUILD_DIR" location="build"/>
    <property name="ME_LIBRARY_DEST" location="${HDC_BUILD_DIR}/grin_library"/> 
    
    <target name="library-all" depends="compile-jdk-library, compile-me-library"/>
    
    <target name="library-clean">
        <delete dir="${JDKTOOLS_BUILD_DIR}"/>
        <delete dir="${ME_LIBRARY_DEST}"/>
    </target>
    
    <target name="init-grin-me-library" depends="init-preset-defs">
        <mkdir dir="${ME_LIBRARY_DEST}"/>
    </target>
    
    <target name="compile-me-library" depends="init-grin-me-library">
        <xlets.javac
            destdir="${ME_LIBRARY_DEST}">                
           <src path="library/src"/>
        </xlets.javac>    
    </target>

    <target name="init-grin-jdk-library" depends="init-preset-defs">
        <mkdir dir="${JDK_LIBRARY_DEST}"/>
    </target>
    
    <target name="compile-jdk-library" depends="init-grin-jdk-library">
        <jdktools.javac
            destdir="${JDK_LIBRARY_DEST}">
            <src path="library/src" />                
            <src path="jdktools/library/src" />           
        </jdktools.javac>    
    </target>

    
</project>
